                            </li>
                        </ul>
                    </li>
                }
                
                <li id="DuLieuTinhToan" onclick="htm.SetUrlDynamic('LichSuCapNhat/Index', 'Get', {}); home.DanhDauMenu('DuLieuTinhToan', 0); AddBreadCrumb(1, 'Dữ liệu tính toán', '');">
                    <a data-ajax="true" data-ajax-method="GET"
                       data-ajax-mode="replace" data-ajax-update="#container"
                       href="/LichSuCapNhat/Index">
                        <div class="item-content">
                            <div class="item-media">
                                <i class="ti-pencil-alt"></i>
                            </div>
                            <div class="item-inner">
                                <span class="title"> DỮ LIỆU TÍNH TOÁN </span>
                            </div>
                        </div>
                    </a>
                </li>
                @if (!String.IsNullOrEmpty(Security.CurrentGroup) & Security.CurrentGroup == "b9bacf66-2439-454d-868c-23d3b04c420e")
                {
                    
                    <li id="TinhToanMucNuoc" onclick="htm.SetUrlDynamicFull({}, '', 'ThietLapXa/Index', 'container'); AddBreadCrumb(0, 'Tính toán mực nước hồ', ''); home.DanhDauMenu('TinhToanMucNuoc', 0);"> @*home.RefreshDelay();*@ 
                        <a @*data-ajax="true" data-ajax-method="GET"
                           
                           data-ajax-mode="replace" data-ajax-update="#container" data-ajax-success="home.CloseRefreshDelay"
                           href="ThietLapXa/Index"*@>
                            <div class="item-content">
                                <div class="item-media">
                                    <i class="ti-image"></i>
                                </div>
                                <div class="item-inner">
                                    <span class="title"> TÍNH TOÁN MỰC NƯỚC HỒ </span>
                                </div>
                            </div>
                        </a>
                    </li>
                    <li>
                        <a href="javascript:void(0)">
                            <div class="item-content">
                                <div class="item-media">
                                    <i class="ti-list"></i>
                                </div>
                                <div class="item-inner">
                                    <span class="title"> PHÂN QUYỀN </span><i class="icon-arrow"></i>
                                </div>
                            </div>
                        </a>
                        <ul class="sub-menu">
                            <li id="QuanLyTaiKhoan" onclick="home.DanhDauMenu('QuanLyTaiKhoan', 2); home.RefreshDelay(); AddBreadCrumb(1, 'Phân quyền', ''); AddBreadCrumb(2, 'Quản lý tài khoản', '');">
                                <a data-ajax="true" data-ajax-method="GET"
                                   
                                   data-ajax-mode="replace" data-ajax-update="#container"  data-ajax-success="home.CloseRefreshDelay"
                                   href="User/SelectAllUser">
                                    <span class="title">Quản lý tài khoản</span>
                                </a>
                            </li>
                        </ul>
                    </li>
                }
            </ul>
        </nav>
    </div>
