                                <div class="item-media">
                                    <i class="ti-bookmark-alt"></i>
                                </div>
                                <div class="item-inner">
                                    <span class="title"> BIỂU ĐỒ </span><i class="icon-arrow"></i>
                                </div>
                            </div>
                        </a>
                        <ul class="sub-menu">
                            
                            <li id="BieuDoMucNuoc" onclick="htm.SetUrlDynamic('BieuDo/BieuDoMucNuoc', 'Get', {}); home.DanhDauMenu('BieuDoMucNuoc', 2); home.RefreshDelay(); AddBreadCrumb(1, 'Biểu đồ', ''); AddBreadCrumb(2, 'Biểu đồ mực nước', '');">
                                @*<a onclick="Fill_Data_To_Chart.call_method_to_fill();">*@
                                    <span class="title">
                                        @Ajax.ActionLink("Biểu đồ mực nước", "BieuDoMucNuoc", "BieuDo", new AjaxOptions
                                   {
                                       HttpMethod = "Get",
                                       InsertionMode = InsertionMode.Replace,
                                       OnSuccess = "home.CloseRefreshDelay",
                                       UpdateTargetId = "container"
                                   })
                                    </span>
                                @*</a>*@
                            </li>
                            
                            <li id="BieuDoLuuLuong" onclick="htm.SetUrlDynamic('BieuDo/BieuDoLuuLuong', 'Get', {}); home.RefreshDelay(); ">
                                <span class="title">
                                    @Ajax.ActionLink("Biểu đồ lưu lượng", "BieuDoLuuLuong", "BieuDo", new AjaxOptions
                               {
                                   HttpMethod = "Get",
                                   InsertionMode = InsertionMode.Replace,
                                   OnSuccess = "home.CloseRefreshDelay",
                                   UpdateTargetId = "container"
                               })
                                </span>
                            </li>
                            
                            <li id="BieuDoHaLuu" onclick="htm.SetUrlDynamic('BieuDo/BieuDoMucNuocHaLuu', 'Get', {}); home.DanhDauMenu('BieuDoHaLuu', 2); home.RefreshDelay(); AddBreadCrumb(1, 'Biểu đồ', ''); AddBreadCrumb(2, 'Biểu đồ mực nước hạ lưu', '');">
                                <span class="title">
                                    @Ajax.ActionLink("Biểu đồ mực nước hạ lưu", "BieuDoMucNuocHaLuu", "BieuDo", new AjaxOptions
                               {
                                   HttpMethod = "Get",
                                   InsertionMode = InsertionMode.Replace,
                                   OnSuccess = "home.CloseRefreshDelay",
                                   UpdateTargetId = "container"
                               })
                                </span>
                            </li>
                            
                            <li id="BieuDoSoSanh" onclick="htm.SetUrlDynamic('BieuDo/BieuDoSoSanh', 'Get', {}); home.DanhDauMenu('BieuDoSoSanh', 2); home.RefreshDelay(); AddBreadCrumb(1, 'BIỂU ĐỒ', ''); AddBreadCrumb(2, 'BIỂU ĐỒ SO SÁNH', '');">
                                 <span class="title">
                                    @Ajax.ActionLink("Biểu đồ so sánh", "BieuDoSoSanh", "BieuDo", new AjaxOptions
                                    {
                                        HttpMethod = "Get",
                                        InsertionMode = InsertionMode.Replace,
                                        UpdateTargetId = "container",
                                        OnSuccess = "home.CloseRefreshDelay"
                                    })
