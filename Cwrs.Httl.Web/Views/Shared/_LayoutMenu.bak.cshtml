@using Cwrs.Lib
<script src="~/Scripts/home/home-min.js"></script>
<div class="sidebar app-aside" id="sidebar">
    <div class="sidebar-container perfect-scrollbar">
        <nav>
            <div class="navbar-title">
                <span>Danh sách chức năng</span>
            </div>
            <!-- start: MAIN NAVIGATION MENU -->
            <ul class="main-navigation-menu">
                @if (!String.IsNullOrEmpty(Security.CurrentGroup) & Security.CurrentGroup == "b9bacf66-2439-454d-868c-23d3b04c420e")
                {
                    <li id="PhuongAn" class="active open" onclick="home.RefreshDelay(); home.DanhDauMenu('PhuongAn', 0);">

                        <a data-ajax="true" data-ajax-method="GET"
                           data-ajax-mode="replace" data-ajax-update="#container" data-ajax-success="home.CloseRefreshDelay"
                           
                           href="PhuongAn/Index" onclick="AddBreadCrumb(1, 'Phương án vận hành', '');">
                            <div class="item-content">
                                <div class="item-media">
                                    <i class="ti-home"></i>
                                </div>
                                <div class="item-inner">
                                    <span class="title"> PHƯƠNG ÁN VẬN HÀNH </span>
                                </div>
